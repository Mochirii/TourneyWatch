<script src="/scripts/login.js"></script>
<link href="https://fonts.googleapis.com/css?family=Roboto:300i" rel="stylesheet">
    <body>
        <main class="container">
            <div id="ui-header">
                <h2>Login</h2>
                <p>Don't have an account? Create one <a href="/users/new">here</a></p>
            </div>
            <div class="login-alert"></div>
            <form id="login form" action="/users/login" method="POST" style="margin:50px 150px 20px 150px;">

                <div class="form-row">
                    <div class="form-label">
                        <label>Email</label>
                    </div>
                    <div class="form-box">
                        <input id="entry-email" type="email" name="email" placeholder="Email Address" style="width: 300px" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label">
                        <label> Password</label>
                    </div>
                    <div class="form-box">
                        <input id="entry-password" type="password" name="password" placeholder="Password" style="width: 300px" required>
                    </div>
                </div>
                <br>
                <div class="form-row">
                    <div class="form-label">
                        <label></label>
                    </div>
                    <div class="form-box">

                    </div>
                </div>

            <div class="submit-button">
                <button class="submit" type="submit" value="Submit">Submit</button>
            </div>

            </form>



        </main>

    </body>

</html>
